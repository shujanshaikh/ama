{
    "name": "ama-agent",
    "type": "module",
    "version": "0.0.1",
    "prepare": "bun run build",
    "bin": {
        "ama-agent": "./dist/cli.js"
    },
    "exports": {
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js",
            "require": "./dist/server.cjs"
        },
        "./dist/*": "./dist/*.js",
        "./dist/*.js": "./dist/*.js"
    },
    "browser": "dist/client.global.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "rm -rf dist && NODE_ENV=production tsup"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@hono/node-server": "^1.19.7",
        "hono": "^4.10.7",
        "picocolors": "^1.1.1",
        "react-grab": "^0.0.74",
        "tsup": "^8.5.1",
        "zod": "^4.1.13"
    }
}