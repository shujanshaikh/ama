{
    "name": "@ama/server",
    "main": "src/index.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./*": {
            "types": "./src/*.ts",
            "default": "./src/*.ts"
        }
    },
    "types": "./src/index.ts",
    "scripts": {
        "build": "tsdown",
        "check-types": "tsc -b",
        "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
        "dev": "bun run --hot src/index.ts",
        "start": "bun run dist/index.js",
        "db:push": "drizzle-kit push"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^3.0.9",
        "@ai-sdk/google": "^3.0.10",
        "@ai-sdk/openai": "^3.0.7",
        "@ai-sdk/openai-compatible": "^2.0.4",
        "@ama/db": "workspace:*",
        "@hono/trpc-server": "^0.4.0",
        "@neondatabase/serverless": "^1.0.2",
        "@openrouter/ai-sdk-provider": "^1.5.3",
        "@supermemory/tools": "^1.3.65",
        "@trpc/server": "^11.5.0",
        "@upstash/ratelimit": "^2.0.7",
        "@upstash/redis": "^1.36.0",
        "@workos-inc/node": "^7.77.0",
        "ai": "^6.0.40",
        "better-auth": "^1.0.0",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "drizzle-orm": "^0.45.1",
        "exa-js": "^2.0.12",
        "hono": "^4.10.7",
        "redis": "^5.10.0",
        "resumable-stream": "^2.2.10",
        "zod": "^4.1.13"
    },
    "devDependencies": {
        "@ama/config": "workspace:*",
        "@types/bun": "^1.2.6",
        "@types/node": "^25.0.1",
        "drizzle-kit": "^0.31.8",
        "tsdown": "^0.16.5",
        "tsx": "^4.21.0",
        "typescript": "^5.9.2"
    }
}